{{> header}}
  <!-- Details -->
    <div class="container details">
        <div class="details-content">
            <h2>{{title}}</h2>
            <strong>{{category}}</strong>
            <p>{{content}}</p>
            <div class="buttons">
                {{#if userIsCreator}}
                <a href="#/delete/{{articleId}}" class="btn delete">Delete</a>
                <a href="#/edit/{{articleId}}" class="btn edit">Edit</a>
                {{else}}
                <a href="#/home" class="btn edit">Back</a>
                {{/if}}
            </div>
        </div>
    </div>
{{> footer}}